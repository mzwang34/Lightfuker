<test type="image" id="volumetric_shadow" mae="1.6e-2" me="0.001">
<integrator type="pathtracer" depth="5">
    <scene id="scene">
        <camera type="perspective" id="camera">
            <integer name="width" value="400"/>
            <integer name="height" value="400"/>

            <string name="fovAxis" value="x"/>
            <float name="fov" value="40"/>

            <transform>
                <translate z="-5"/>
            </transform>
        </camera>

        <light type="directional" direction="-0.7,-1.2,0" intensity="2"/>
        <instance>
            <shape type="rectangle"/>
            <bsdf type="diffuse">
                <texture name="albedo" type="constant" value="1"/>
            </bsdf>
            <transform>
                <rotate axis="1,0,0" angle="90"/>
                <scale value="10"/>
                <translate y="1"/>
            </transform>
        </instance>

        <instance>
            <shape type="sphere"/>
            <bsdf type="diffuse">
                <texture name="albedo" type="constant" value="1"/>
            </bsdf>
            <transform>
                <scale value="0.5"/>
                <translate y="-0.8" z="0" x="-0.8"/>
            </transform>
        </instance>

        <instance>
            <shape type="volume" density="1">
                <shape type="sphere"/>
            </shape>
            <bsdf type="hg">
                    <float name="g" value="0"/>
                    <color name="albedo" value="0.5,0.25,0.4"/>
            </bsdf>
            <transform>
                <scale value="1"/>
                <translate y="0" z="0" x="-0.2"/>
            </transform>
        </instance>
    </scene>
    <sampler type="independent" count="500"/>
</integrator>
</test>