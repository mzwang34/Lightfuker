<integrator type="pathtracer_mis" depth="5">
    <image id="iridescence" />
    <scene id="scene">
        <camera type="perspective" id="camera">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>
            <string name="fovAxis" value="x"/>
            <float name="fov" value="40"/>
            <transform>
                <translate z="-8"/>
            </transform>
        </camera>

        <light type="envmap">
            <texture type="image" filename="../../textures/kloofendal_overcast_1k.hdr" exposure="0.7"/>
            <transform>
                <rotate axis="0,1,0" angle="-50"/>
            </transform>
        </light>

        <instance>
            <shape type="sphere"/>
            <bsdf type="iridescence">
                <float name="thickness" value="0.6"/> 
                <float name="ior_film" value="1.5"/>
                <float name="ior_base" value="0.2"/>
                <float name="kappa3" value="0.5"/>
                <texture name="roughness" type="constant" value="0.25"/>
            </bsdf>
        </instance>
    </scene>
    <sampler type="independent" count="64"/>
</integrator>
