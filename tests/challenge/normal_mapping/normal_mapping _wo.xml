<integrator type="direct">
    <image id="normal_mapping_wo" />
    <scene id="scene">
        <camera type="perspective" id="camera">
            <integer name="width" value="512"/>
            <integer name="height" value="512"/>
            <string name="fovAxis" value="x"/>
            <float name="fov" value="40"/>
            <transform>
                <translate z="-8"/>
            </transform>
        </camera>

        <light type="directional" direction="-0.8,-1,-1" intensity="2.1,1.88,1.65"/>

        <instance>
            <shape type="rectangle"/>
            <bsdf type="diffuse">
                <texture name="albedo" type="constant" value="0.5" />
            </bsdf>
            <!-- <texture name="normal" type="image" filename="../textures/normal_map.png"/> -->
            <transform>
                <rotate axis="1,0,0" angle="140"/>
                <scale value="2"/>
            </transform>
        </instance>
    </scene>
    <sampler type="independent" count="64"/>
</integrator>
